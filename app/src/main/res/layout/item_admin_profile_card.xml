<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/card_bg"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_name3223"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/profileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/email_example_com"
        android:textColor="#757575"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/joinedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="8dp"
        android:text="@string/joined_january_1_2025"
        android:textColor="#757575"
        android:textSize="11sp" />

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/viewProfileBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:backgroundTint="#E8E8E8"
            android:text="@string/view_profile_details32"
            android:textAllCaps="false"
            android:textColor="#666666"
            android:textSize="11sp"
            tools:ignore="HardcodedText,TouchTargetSizeCheck,VisualLintButtonSize" />

        <Button
            android:id="@+id/deleteProfileBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:backgroundTint="#F19A9A"
            android:text="@string/delete_profile23"
            android:textAllCaps="false"
            android:textColor="#37474F"
            android:textSize="11sp"
            tools:ignore="ButtonStyle,TouchTargetSizeCheck,VisualLintButtonSize" />
    </LinearLayout>
</LinearLayout>