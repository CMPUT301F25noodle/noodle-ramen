<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notification_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Notification title -->
            <TextView
                android:id="@+id/notification_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" You Won!"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Timestamp -->
            <TextView
                android:id="@+id/notification_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 hours ago"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <!-- Notification message -->
        <TextView
            android:id="@+id/notification_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Congratulations! You've been selected for Swimming Lessons. Please accept or decline your invitation."
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <!-- Accept/Decline buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="end">

            <!-- Decline button -->
            <Button
                android:id="@+id/decline_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:textColor="@android:color/holo_red_dark"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginEnd="8dp"
                android:minWidth="100dp" />

            <!-- Accept button -->
            <Button
                android:id="@+id/accept_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_green_dark"
                android:minWidth="100dp" />

        </LinearLayout>

        <!-- Responded indicator-->
        <TextView
            android:id="@+id/responded_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="âœ“ Responded"
            android:textSize="12sp"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="italic"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
