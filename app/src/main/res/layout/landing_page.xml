<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LandingActivity">

    <!-- Title: Event -->
    <TextView
        android:id="@+id/textEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textLottery"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="5dp" />

    <!-- Title: Lottery -->
    <TextView
        android:id="@+id/textLottery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lottery"
        android:textColor="#DF79E4"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/textEvent"
        app:layout_constraintStart_toEndOf="@id/textEvent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/textSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your one stop shop for community events"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/textEvent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Ready to begin -->
    <TextView
        android:id="@+id/textReady"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to begin?"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/buttonRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <!-- Buttons Row -->
    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="120dp">

        <Button
            android:id="@+id/signup_button"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:backgroundTint="#DF79E4"
            android:textStyle="bold"
            android:layout_marginEnd="20dp" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:backgroundTint="#81CE6E"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>