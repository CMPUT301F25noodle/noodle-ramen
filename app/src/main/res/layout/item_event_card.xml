<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- 1. IMAGE CONTAINER (Top Section) -->
        <FrameLayout
            android:id="@+id/image_container"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:background="#F0F0F0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Placeholder Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="No Image Available"
                android:textColor="#999999" />

            <!-- The Actual Image (Hidden by default, shown by Adapter) -->
            <ImageView
                android:id="@+id/eventImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <!-- Gradient protection for text overlay (Optional) -->
        </FrameLayout>

        <!-- 2. PRICE BADGE (Overlaying the Image Top-Right) -->
        <TextView
            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_price_badge"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="$15"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 3. TITLE (Below Image, Left) -->
        <TextView
            android:id="@+id/event_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Dev Edmonton Tech Meetup"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/status_badge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_container" />

        <!-- 4. STATUS BADGE (Below Image, Right - Green pill in screenshot) -->
        <TextView
            android:id="@+id/status_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_status_pill"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="Open"
            android:textColor="#2E7D32"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/event_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/event_title" />

        <!-- 5. LOCATION & DATE ROW -->
        <LinearLayout
            android:id="@+id/info_row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/event_title">

            <!-- Location -->

            <TextView
                android:id="@+id/location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Edmonton"
                android:textColor="#666666"
                android:textSize="14sp" />

            <!-- Date -->

            <TextView
                android:id="@+id/date_range_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29/11/2025"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 6. SPOTS / WAITLIST INFO -->
        <LinearLayout
            android:id="@+id/spots_row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info_row">

            <TextView
                android:id="@+id/spots_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 spots"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â€¢ "
                android:textColor="#666666" />

            <TextView
                android:id="@+id/waitlist_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 waitlist"
                android:textColor="#666666"
                android:textSize="14sp" />

            <!-- Organization Name (Adding it here or below spots if needed) -->
            <TextView
                android:id="@+id/organization_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>

        <!-- 7. JOIN BUTTON (Bottom Black Button) -->
        <FrameLayout
            android:id="@+id/join_button_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/go_to_event_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spots_row">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/join_waitlist_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Join"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:backgroundTint="#587A6D"
                app:cornerRadius="8dp" />

            <ProgressBar
                android:id="@+id/join_button_progress"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminateTint="@android:color/white" />
        </FrameLayout>

        <!-- 8. ARROW BUTTON (Replacing "Go To Event" Text Button with an Icon) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/go_to_event_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="#00FFFFFF"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_media_play"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="#1A1A1A"
            app:layout_constraintBottom_toBottomOf="@+id/join_button_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/join_button_container"
            app:strokeColor="#DDDDDD"
            app:strokeWidth="1dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>