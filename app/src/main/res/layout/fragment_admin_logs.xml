<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Admin Dashboard Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/admin_dashboard87"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Notifications Count Card -->
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/card_bg"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification8"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/notificationsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_5687"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Notifications List -->
        <LinearLayout
            android:id="@+id/notificationsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Notification 1 - Congratulations -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/card_bg"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/congratulations89"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/by_event_1_organizers78"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/you_ve_been_drawn_and_is_allowed_to_part7icipate_in_the_event_please_accept_your_invite_to_proceed_and_save_your_spot_please_go_to_your_my_events_list_to_accept_your_invite"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

            <!-- Notification 2 - I'm sorry -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/card_bg"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/i_m_sorry98"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/by_event_2_organizers7"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/you_weren_t_drawn_to_participate_in_event_name_however_you_can_opt_in_to_be_put_into_another_waitlist_in_case_a_an_accepted_user_fails_to_accept_their_invite_or778_declines_their_invitation"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

            <!-- Notification 3 - Drawing has begun -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/card_bg"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/drawing_has_begun78"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/by_event_3_organizers989"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/the_registration_date_has_arrived_for_this_event_and_the_entrants_will_be_drawn_soon_keep_an_eye_our_for_an_update7"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>