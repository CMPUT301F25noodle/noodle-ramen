<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Admin Dashboard"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginBottom="24dp"/>

        <!-- Row 1 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Profiles -->
            <LinearLayout
                android:id="@+id/cardProfiles"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/card_bg">

                <TextView
                    android:text="Profiles"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/countProfiles"
                    android:text="0"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <Space
                android:layout_width="16dp"
                android:layout_height="match_parent"/>

            <!-- Organizers -->
            <LinearLayout
                android:id="@+id/cardOrganizers"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/card_bg">

                <TextView
                    android:text="Organizers"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/countOrganizers"
                    android:text="0"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <Space android:layout_height="16dp"/>

        <!-- Row 2 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Events -->
            <LinearLayout
                android:id="@+id/cardEvents"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/card_bg">

                <TextView
                    android:text="Events"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/countEvents"
                    android:text="0"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <Space
                android:layout_width="16dp"
                android:layout_height="match_parent"/>

            <!-- Notifications -->
            <LinearLayout
                android:id="@+id/cardNotifications"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/card_bg">

                <TextView
                    android:text="Notifications"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/countNotifications"
                    android:text="0"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <Space android:layout_height="16dp"/>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Images -->
            <LinearLayout
                android:id="@+id/cardImages"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:padding="16dp"
                android:orientation="vertical"
                android:background="@drawable/card_bg">

                <TextView
                    android:text="Images"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/countImages"
                    android:text="0"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <Space android:layout_width="16dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
